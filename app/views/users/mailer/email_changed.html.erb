<p><%= t("devise.mailer.email_changed.hello", email: @email) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t("devise.mailer.email_changed.trying_contact", unconfirmed_email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t("devise.mailer.email_changed.notify_contact", resource_email: @resource.email) %></p>
<% end %>
